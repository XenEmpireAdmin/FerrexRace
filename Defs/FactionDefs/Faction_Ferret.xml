<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef>
		<defName>FerrexBusiness</defName>
		<label>Ferrex business federation</label>
    <description>A colony of the clever Ferrex race.</description>
    <pawnsPlural>Ferrex</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Archivist</leaderTitle>
    <startingGoodwill>
      <min>10</min>
      <max>40</max>
    </startingGoodwill>
	<factionNameMaker>NamerFactionFerrex</factionNameMaker>
	<settlementNameMaker>NamerFactionBaseFerrex</settlementNameMaker>
	<techLevel>Ultra</techLevel>
  		<backstoryCategories>
			<li>FerrexBackstory</li>
		</backstoryCategories>
			<hairTags>
			<li>FerrexHair</li>
			</hairTags>
    <naturalColonyGoodwill>
      <min>-60</min>
      <max>0</max>
    </naturalColonyGoodwill>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
   <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-50</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <FerrexColonist>50</FerrexColonist>
          <FerrexSecurityGuard>90</FerrexSecurityGuard>
          <FerrexExecutive>250</FerrexExecutive>
          <FerrexMerc>100</FerrexMerc>
          <FerrexSurveyor>130</FerrexSurveyor>
          <FerrexProfessional>130</FerrexProfessional>
          <FerrexNinja>170</FerrexNinja>
        </options>
      </li>
	  <li>
      <kindDef>Trader</kindDef>
        <traders>
          <FerrexTrader>1</FerrexTrader>
        </traders>
        <carriers>
          <Muffalo>2</Muffalo>
          <Dromedary>2</Dromedary>
        </carriers>
        <guards>
          <FerrexSecurityGuard>90</FerrexSecurityGuard>
          <FerrexMerc>100</FerrexMerc>
          <FerrexSurveyor>130</FerrexSurveyor>
          <FerrexProfessional>130</FerrexProfessional>
        </guards>
      </li>
	  <li>
        <kindDef>Settlement</kindDef>
        <options>
          <FerrexColonist>50</FerrexColonist>
          <FerrexSecurityGuard>90</FerrexSecurityGuard>
          <FerrexExecutive>250</FerrexExecutive>
          <FerrexMerc>100</FerrexMerc>
          <FerrexSurveyor>130</FerrexSurveyor>
          <FerrexProfessional>130</FerrexProfessional>
          <FerrexNinja>170</FerrexNinja>
        </options>
      </li>
