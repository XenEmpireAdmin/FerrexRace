    <label>Vactor bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>6</damageAmountBase>
      <speed>65</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseFerrexMakeableGun">
    <defName>Ferrex_Vac</defName>
    <label>Ferrex Vactor</label>
    <description>An advanced submachine gun produced by the Ferrex. They use an unconventional delayed blowback system combined with in-line design to reduce perceived recoil and muzzle climb.</description>
    <graphicData>
      <texPath>Things/Guns/Vactor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractPistol</soundInteract>
    <statBases>
      <MarketValue>325</MarketValue>
      <Mass>1</Mass>
      <AccuracyTouch>0.94</AccuracyTouch>
      <AccuracyShort>0.87</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.53</AccuracyLong>
      <RangedWeapon_Cooldown>0.35</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <Component>3</Component>
    </costList>
    <weaponTags>
      <li>FPistol</li>
      <li>BallisticShield_ValidSidearm</li>
      <li>MedievalShields_ValidSidearm</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Bullet_FVac</projectileDef>
        <warmupTime>1.20</warmupTime>
        <burstShotCount>5</burstShotCount>
				<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <range>24</range>
        <soundCast>Xen_SD</soundCast>
      </li>
    </verbs>
  </ThingDef>


